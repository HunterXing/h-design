{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "module": "esnext",
    "outDir": "./lib",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": ["node_modules/**", "./lib/**/*" ],
  "include": ["packages/components/**/*", "packages/typings","src/**/*","vue-shim.d.ts", "packages/typings/vue-shim.d.ts"],
}