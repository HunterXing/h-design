{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "module": "esnext",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": ["node_modules/**"],
  "include": ["packages/components/**/*", "src/**/*","vue-shim.d.ts"],
}